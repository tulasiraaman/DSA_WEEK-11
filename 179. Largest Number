class Solution {
    public String largestNumber(int[] nums) {
        if(nums == null || nums.length == 0) return "";
        int n = nums.length;

        // converting string because to fing highest value. integer not works here.
        String[] strNums = new String[n];
        for(int i = 0;i < n; i++){
            strNums[i] = String.valueOf(nums[i]);
        }

        Arrays.sort(strNums, new Comparator<String>(){
            public int compare(String a, String b){
                String num1 = a + b;
                String num2 = b + a;
                return num2.compareTo(num1); // descending order
                // compareTo() is a method fromString class.
                // It compares two Strings lexicographically (dictionary order).
            }
        });
        // base case if the first is 0 all are 0. so return here.
        if(strNums[0].equals("0")) return "0";

        StringBuilder sb = new StringBuilder();
        for(String num: strNums){
            sb.append(num);
        }
        return sb.toString();
    }
}// TC - O(n log n), SC - O(n)
